<Window x:Class="SnippingTool.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SnippingTool"
        xmlns:viewModels="clr-namespace:SnippingTool.ViewModels"
        mc:Ignorable="d"
        Title="Main" Height="350" Width="525">
    <Window.DataContext>
        <viewModels:MainWindowViewModel/>
    </Window.DataContext>
    
    <Grid>
        <Button Content="Settings" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="150" Command="{Binding OpenSettingsWindowCommand}"/>
        <Button Content="Take Screenshot" HorizontalAlignment="Left" Margin="10,37,0,0" VerticalAlignment="Top" Width="150" Command="{Binding TakeScreenshotCommand}" />
        <Button Content="Take Screenshot And Crop" HorizontalAlignment="Left" Margin="10,64,0,0" VerticalAlignment="Top" Width="150" Command="{Binding OpenScreenshotWindowCommand}"
        />
    </Grid>
</Window>
